            mvn_uri="mvn:org.talend.libraries/hadoop-auth-2.6.0-cdh5.8.1/6.1.0">
        </libraryNeeded>
        
        <!-- Third parties libraries -->
        <libraryNeeded
            context="plugin:org.talend.hadoop.distribution.cdh580"
            id="avro-cdh5.8.0"
            name="avro-1.7.6-cdh5.8.1.jar"
            mvn_uri="mvn:org.talend.libraries/avro-1.7.6-cdh5.8.1/6.1.0">
        </libraryNeeded>        
                       
        <!-- Groups -->
        
        <!-- HDFS group -->
        <libraryNeededGroup
                description="HDFS libraries for CDH 5.8"
                id="HDFS-LIB-CDH_5_8"
                name="HDFS-LIB-CDH_5_8"  >
             <library id="hadoop-common-cdh5.8.0" />
