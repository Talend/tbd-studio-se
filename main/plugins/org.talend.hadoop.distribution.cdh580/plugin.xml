<plugin>
    <extension point="org.talend.core.runtime.librariesNeeded">
        
        <!-- HDFS libraries -->    
        <libraryNeeded
            context="plugin:org.talend.hadoop.distribution.cdh580"
            id="hadoop-common-cdh5.8.0"
            name="hadoop-common-2.6.0-cdh5.8.1.jar"
            mvn_uri="mvn:org.talend.libraries/hadoop-common-2.6.0-cdh5.8.1/6.1.0">
        </libraryNeeded>

        <libraryNeeded
            context="plugin:org.talend.hadoop.distribution.cdh580"
            id="hadoop-hdfs-cdh5.8.0"
